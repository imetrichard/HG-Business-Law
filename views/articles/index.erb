<ul>
  <li><a href="/">Home</a></li>
  <li><a href="/articles/new">New Post</a></li>
  <% if post_show_page?  %>
    <li><a href="/articles/<%= @post.id %>/edit">Edit Post</a></li>
    <li><%= delete_post_button(@post.id) %></li>
  <% end %>
</ul>

<h1>Welcome to my blog!</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><a href="/posts/<%= post.id %>"><%= post.title %></a>
        <span><%= pretty_date(post.created_at) %></span>
      </h2>
    </li>
  <% end %>
</ul>